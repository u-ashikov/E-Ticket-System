@model IEnumerable<CompanyListingServiceModel>

@{
    ViewData["Title"] = "All Companies";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if(Model.Count() == 0)
{
    <h3 class="text-center">No companies registered yet!</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>URN</th>
                <th>Address</th>
                <th>Chief</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var company in Model)
            {
                <tr>
                    <td>@company.Name</td>
                    <td>@company.UniqueReferenceNumber</td>
                    <td>@company.Address</td>
                    <td>@company.Chief</td>
                    <td>@company.Email</td>
                    <td>@company.PhoneNumber</td>
                    <td>
                        @if(company.IsApproved)
                        {
                            <span class="text-success">Approved</span>
                        }
                        else
                        {
                            <a class="btn btn-primary" asp-action="Approve" asp-controller="AdminCompanies" asp-route-companyId="@company.Id">Approve</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

