@model StationFormModel

<form method="post" class="col-md-6 col-md-offset-3">
    <hr />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TownId"></label>
        <select asp-for="TownId" asp-items="@Model.Towns" class="form-control @(Model.IsEdit ? "disabled" : string.Empty)"></select>
        <span asp-validation-for="TownId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" required />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-success" value="Save Station" />
</form>