@model IEnumerable<RouteSearchListingServiceModel>

@{
    ViewData["Title"] = "Search Routes";
}

<h2 class="text-center">@ViewData["Title"]</h2>

@if(Model.Count() == 0)
{
    <h3>No routes found!</h3>
}
else
{
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Start station</th>
                <th>End station</th>
                <th>Departure time</th>
                <th>Duration</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.StartStation</td>
                    <td>@r.EndStation</td>
                    <td>@r.DepartureTime</td>
                    <td>@r.Duration</td>
                    <td>@r.Price</td>
                </tr>
            }
        </tbody>
    </table>
}

