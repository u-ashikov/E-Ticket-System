@model SearchRouteFormModel

@{
    ViewData["Title"] = "Home Page";
}

<environment include="Development">
    <link rel="stylesheet" href="~/css/home.css" />
</environment>

<div class="container-fluid home-container">
    <div class="row search-container">
        <div class="col-lg-4 col-lg-offset-1 search-form-container">
            <form method="post" class="search-form">
                <h3 class="text-center">Search routes</h3>
                <hr />
                <div class="form-group">
                    <label asp-for="StartTown"></label>
                    <select asp-for="StartTown" class="form-control"></select>
                    <span asp-validation-for="StartTown" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndTown"></label>
                    <select asp-for="EndTown" class="form-control"></select>
                    <span asp-validation-for="EndTown" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger"></span>
                </div>
                <input type="submit" value="Search" class="btn btn-success"/>
            </form>
        </div>
        <div class="col-lg-6">
            <h1>Test</h1>
        </div>
    </div>
</div>